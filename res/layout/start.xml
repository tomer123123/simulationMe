<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.15" android:weightSum="1">
        <TextView
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Please choose who you are"
                android:id="@+id/textView2" android:layout_gravity="center_horizontal" android:layout_weight="0.39"/>
    </LinearLayout>
    <Button
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:text="teacher"
            android:id="@+id/teacher" android:layout_weight="0.21" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:text="student"
            android:id="@+id/student" android:layout_weight="0.23" android:layout_gravity="center_horizontal"/>
</LinearLayout>